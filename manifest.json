{
  "manifest_version": 2,
  "name": "Open Umbraco",
  "homepage_url": "https://github.com/HarveyWilliams/OpenUmbraco",
  "version": "0.7.0",
  "icons": {
    "30": "icons/30-blue.png"
  },
  "description": "Open the current sites Umbraco page.",
  "background": {
    "scripts": [
      "shared.js",
      "open.js",
      "helpers.js",
      "notify.js",
      "log.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/30-blue.png",
    "default_title": "Open Umbraco!"
  },
  "permissions": [
      "tabs",
      "storage",
      "cookies",
      "webNavigation",
      "notifications",
      "http://*/",
      "https://*/",
      "menus"
  ],
  "options_ui": {
      "page": "options.html"
  }
}
