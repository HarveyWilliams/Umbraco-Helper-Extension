{
  "applications": {
    "gecko": {
      "id": "{d38c41da-b1ec-4f80-a310-ac90bb1ec96b}"
    }
  },
  "manifest_version": 2,
  "name": "Umbraco Helper Extension",
  "homepage_url": "https://github.com/HarveyWilliams/Umbraco-Helper-Extension",
  "version": "0.9.1",
  "icons": {
    "30": "icons/30-blue.png"
  },
  "description": "A browser extension which helps you work quicker with Umbraco with small productivity increasing features.",
  "background": {
    "scripts": [
      "/scripts/browser-polyfill.min.js",
      "/scripts/urlTracker.js",
      "/scripts/settings.js",
      "/scripts/shared.js",
      "/scripts/helpers.js",
      "/scripts/notify.js",
      "/scripts/log.js",
      "main.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/30-blue.png",
    "default_title": "Umbraco Helper"
  },
  "permissions": [
      "tabs",
      "storage",
      "cookies",
      "webNavigation",
      "notifications",
      "http://*/",
      "https://*/",
      "contextMenus",
      "menus"
  ],
  "options_ui": {
      "browser_style": true,
      "page": "options.html"
  }
}
