{
  "manifest_version": 2,
  "name": "Open Umbraco",
  "homepage_url": "https://github.com/HarveyWilliams/OpenUmbraco",
  "version": "0.7.0",
  "icons": {
    "30": "icons/30-blue.png"
  },
  "description": "Open the current sites Umbraco page.",
  "background": {
    "scripts": [
      "shared.js",
      "open.js",
      "helpers.js",
      "notify.js",
      "log.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/30-blue.png",
    "default_title": "Open Umbraco!"
  },
  "permissions": [
      // For creating tabs and getting the current tab URL.
      "tabs",
      // For saving settings.
      "storage",
      // For accessing Umbraco cookies so queries can be made
      // on your behalf.
      "cookies",
      // Not sure.
      "webNavigation",
      // To notify you of any errors.
      "notifications",
      // So queries can be made to the current Umbraco site.
      "http://*/",
      "https://*/",
      // Custom right-click context menu.
      "menus"
  ],
  "options_ui": {
      "page": "options.html"
  }
}
